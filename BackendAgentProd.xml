<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Framework CS PORTAl Test Suite" preserve-order="true" allow-return-values="true">
    <listeners>
        <listener class-name="com.airtel.cs.commonutils.listeners.TestListenerMethod"/>
    </listeners>
    <test name="Prod Test Login API">
        <groups>
            <run>
                <include name="ProdTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.airtel.cs.ui.frontendagent.loginandlogout.LoginAPITest"/>
        </classes>
    </test>
    <test name="Test Login Into Portal">
        <groups>
            <run>
                <include name="ProdTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.airtel.cs.ui.frontendagent.loginandlogout.LoginPortalTests"/>
        </classes>
    </test>
    <test name="LOGIN TO BACKEND AGENT">
        <groups>
            <run>
                <include name="ProdTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.airtel.cs.ui.backendAgent.BackendAgentLoginTest"/>
        </classes>
    </test>
    <test name="Validate BACKEND AGENT Filter Options">
        <groups>
            <run>
                <include name="ProdTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.airtel.cs.ui.backendAgent.BackendAgentFilterTest"/>
        </classes>
    </test>
    <test name="BACKEND AGENT Transfer to Queue Test">
        <groups>
            <run>
                <include name="ProdTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.airtel.cs.ui.backendAgent.transfertoqueue.TransferToQueueTest"/>
        </classes>
    </test>
    <test name="Logout Test from Backend agent">
        <groups>
            <run>
                <include name="ProdTest"/>
            </run>
        </groups>
        <classes>
            <class name="com.airtel.cs.ui.frontendagent.loginandlogout.LogoutTest"/>
        </classes>
    </test>
</suite>